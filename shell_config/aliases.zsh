#! /usr/bin/env zsh

# Substitute ls for lsd 
alias ls='lsd --color=auto --group-dirs=first'
alias ll='lsd -la --color=auto --group-dirs=first'
alias la='lsd -a --color=auto --group-dirs=first'
alias lt='lsd --tree --color=auto --group-dirs=first'
alias l='lsd -l --color=auto --group-dirs=first --git'

alias cp='xcp'

alias rm="echo Use 'rip' instead of rm."
